  "actions": [
    {
      "name": "takeAction",
      "conditions": [
        {
          "condition": "get.{obj}.carry.ne.1",
          "failureMessage": "You already have the {obj}"
        },
        {
          "condition": "get.{obj}.location.eq.{userLocation}",
          "failureMessage": "The {obj} isn't here"
        },
        {
          "condition": "get.{obj}.canTake.eq.1",
          "failureMessage": "You can't take the {obj}"
        }
      ],
      "operations": [
        "set.{obj}.carry.1"
      ],
      "CompletedMessage": "You take the {obj}"
    },
    {
      "name": "dropAction",
      "conditions": [
        {
          "condition": "get.{obj}.carry.eq.1",
          "failureMessage": "You don't have the {obj}"
        }
      ],
      "operations": [
        "clear.{obj}.carry"
      ],
      "completedMessage": "You drop the {obj}"
    },
    {
      "name": "waitAction",
      "conditions": [],
      "operations": [ "wait" ],
      "completedMessage": "You {verb}. Time passes."
    },
    {
      "name": "examineAction",
      "conditions": [],
      "operations": [ "write.item.{obj}.longDescription" ],
      "completedMessage": ""
    },
    {
      "name": "openAction",
      "conditions": [
        {
          "condition": "get.{obj}.location.eq.{userLocation}",
          "failureMessage": "The {obj} isn't here"
        },
        {
          "condition": "get.{obj}.isOpen.ne.1",
          "failureMessage": "The {obj} is already open."
        },
        {
          "condition": "get.{obj}.canOpen.eq.1",
          "failureMessage": "The {obj} can't be opened."
        }
      ],
      "operations": [
        "set.{obj}.isOpen.1"
      ],
      "completedMessage": "You open the {obj}."
    },
    {
      "name": "breakAction",
      "conditions": [
        {
          "condition": "get.{obj}.location.eq.{userLocation}",
          "failureMessage": "The {obj} isn't here"
        },
        {
          "condition": "get.{obj}.isBroken.ne.1",
          "failureMessage": "The {obj} is already broken."
        },
        {
          "condition": "get.{obj}.canBreak.eq.1",
          "failureMessage": "The {obj} can't be broken."
        },
        {
          "condition": "get.hammer.carry.eq.1",
          "failureMessage": "You don't have anything to break the {obj} with."
        }
      ],
      "operations": [
        "set.{obj}.isbroken.1"
      ],
      "completedMessage": "You break the {obj}"
    },
    {
      "name": "lookAction",
      "conditions": [],
      "operations": [ "write.loc.{userLocation}.description" ],
      "completedMessage": ""
    },
    {
      "name": "inventoryAction",
      "conditions": [],
      "operations": [
        "print.You are carrying:",
        "write.item.*.shortDescription.carry.eq.1"
      ],
      "completedMessage": ""
    }
  ]
}